<main>
  <p id ="notice"><%= flash[:notice] %></p>

  <div class = "container px-5 px-sm-0">
    <div class = "col-md-3">
      <%= render 'layouts/sidebar' %>
    </div>
  </div>

    <div class = "col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class = "table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan = "3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, fallback: "default.image.jpg", size:'80x80' %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</main>