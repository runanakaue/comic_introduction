<main>
  <p id = "notice"><%= flash[:notice] %></p>

  <div class = "container px-5 px-sm-0">
    <div class = "row">
      <div class = "col-md-3">
        <%= render 'layouts/sidebar' %>
      </div>


      <div class = "col-md-8 offset-md-1">
        <h2><i class="fas fa-pen-fancy"></i>Cartoonists</h2>
        <table class = "table table-hover table-inverse">
          <thead>
            <tr>
              <th>artist_name</th>
              <th colspan = "3"></th>
              <Body></Body>
            </tr>
          </thead>
          <tbody>
            <% @cartoonists.each do |cartoonist| %>
            <tr>
              <td><%= link_to cartoonist.artist_name, cartoonist_path(cartoonist.id)  %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>