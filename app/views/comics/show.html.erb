<main>
  <p id = "notice"><%= flash[:notice] %></p>

  <div class = "container px-5 px-sm-0" >
    <div class = "row">
      <div class = "col-md-3">
        <%= render 'layouts/sidebar' %>
      </div>


      <div class = "col-md-8 offset-md-1">
        <h2><i class="fas fa-book-open"></i>Comic detail</h2>
        <table class = "table table-hover table-inverse">
          <thead>
            <tr>
              <th>作品名</th>
              <th>内容</th>
              <th>漫画家</th>
              <th>出版社</th>
              <th colspan = "3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @comic.title %></td>
              <td><%= @comic.body %></td>
              <td><%= @comic.cartoonist&.artist_name %></td>
              <td><%= @comic.publisher&.company_name %></td>
              <% if current_user == @comic.user %>
              <td><%= link_to 'Edit', edit_comic_path(@comic.id) %></td>
              <td><%= link_to 'Destroy', comic_path(@comic), method: :delete %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>