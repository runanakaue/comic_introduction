<main>
  <p id="notice"><%= notice %></p>
  <%= form_with model:@comic, local:true do |f| %>
    <div class = "contailner">
      <div class = "row">
        <div class = "col-sm-12 col-md-8 col-lg-5 p-5 px-sm-0 mx-auto">
          <h2>Editing Comic</h2>
            <% if @comic.errors.any? %>
            <div id = "error_explanation">
              <h2><%= @comic.errors.count %>error prohibited this user from saved:</h2>
                <ul>
                  <% @comic.errors.full_message.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
            </div>
            <% end %>

            <%= form_with model:@comic, local:true do |f| %>
              <div class = "form-group">
                <%= f.label :title %>
                <%= f.text_field :title %>
              </div>
              <div class = "form-group">
                <%= f.label :body %>
                <%= f.text_area :body %>
              </div>
              <div class = "form-group">
                <%= f.submit "Update Comic" %>
              </div>
              <%= link_to "Show", comic_path(@comic.id) %>
              |
              <%= link_to "Back", comics_path %>
            <% end %>
        </div>
      </div>
    </div>
  <% end %>
</main>
