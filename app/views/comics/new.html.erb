<main>
  <p id="notice"><%= notice %></p>
  <%= form_with model:@comic, url:comics_path, local:true do |f| %>
    <div class = "contailner">
      <div class = "row">
        <div class = "col-sm-12 col-md-8 col-lg-5 p-5 px-sm-0 mx-auto">
          <h2><i class="fas fa-plus"></i>New Comic</h2>
            <% if @comic.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@comic.errors.count, "error") %> prohibited this comic from being saved:</h2>
                <ul>
                  <% @comic.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>



              <div class = "form-group">
                <%= f.label :title, "作品名" %>
                <%= f.text_field :title %>
              </div>
              <div class = "form-group">
                <%= f.label :body, "内容" %>
                <%= f.text_area :body %>
              </div>
              <div class="form-group">
                <%= f.label :artist_name_id, "漫画家" %>
                <%= select_tag "comic[cartoonist_id]", options_for_select(Cartoonist.all.map { |c| [c.artist_name, c.id] }), class: "js-searchable" %>

              </div>
              <div class="form-group">
                <%= f.label :campany_name_id, "出版社" %>
                <%= f.collection_select :publisher_id, Publisher.all, :id, :company_name %>
              </div>
              <div class = "form-group">
                <%= f.submit "Create Comic" %>
              </div>
                <%= link_to "Back", comics_path %>

        </div>
      </div>
    </div>
  <% end %>
</main>