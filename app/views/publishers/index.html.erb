<main>
  <p id = "notice"><%= flash[:notice] %></p>

  <div class = "container px-5 px-sm-0">
    <div class = "row">
      <div class = "col-md-3">
        <%= render 'layouts/sidebar' %>
      </div>


      <div class = "col-md-8 offset-md-1">
        <h2><i class="fas fa-building"></i>Publishers</h2>
        <table class = "table table-hover table-inverse">
          <thead>
            <tr>
              <th>出版社</th>
              <th colspan = "3"></th>
              <Body></Body>
            </tr>
          </thead>
          <tbody>
            <% @publishers.each do |publisher| %>
            <tr>
              <td><%= link_to publisher.company_name, publisher_path(publisher.id)  %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>