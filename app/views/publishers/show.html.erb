<main>
  <p id = "notice"><%= flash[:notice] %></p>

  <div class = "container px-5 px-sm-0" >
    <div class = "row">
      <div class = "col-md-3">
        <%= render 'layouts/sidebar' %>
      </div>


      <div class = "col-md-8 offset-md-1">
        <h2><i class="fas fa-building"></i>Publisher detail</h2>
        <table class = "table table-hover table-inverse">
          <thead>
            <tr>
              <th>作品名</th>
              <th>レビュー</th>
              <th>作者</th>
              <th colspan = "3"></th>
            </tr>
          </thead>
          <tbody>
          <% @publisher.comics.each do |comic| %>
            <tr>
              <td><%= link_to comic.title, comic_path(comic.id) %></td>
              <td><%= comic.body %></td>
              <td><%= comic.cartoonist&.artist_name %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>